{
  "name": "ahlcg",
  "type": "module",
  "version": "0.0.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "run-script-os",
    "start:win32": "ng serve --port %PORT%",
    "start:default": "ng serve --port $PORT",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:ci",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadless",
    "format:base": "prettier --log-level warn --ignore-path=./.gitignore  \"src/**/*.{js,ts,css,scss,sh,html,md,json,yaml,yml}\"",
    "format": "npm run format:base -- --write",
    "lint": "eslint -f mo \"src/**/*.{js,ts,html,json}\"",
    "lint:style": "stylelint \"src/**/*.{css,scss}\"",
    "lint:spelling": "cspell --quiet \"src/**/*\"",
    "lint:tsc:app": "tsc --noEmit -p tsconfig.app.json",
    "lint:tsc:spec": "tsc --noEmit -p tsconfig.spec.json",
    "lint:tsc:all": "npm run lint:tsc:app && npm run lint:tsc:spec",
    "lint:format": "npm run format:base -- --check",
    "lint:all": "npm run lint:tsc:all && npm run lint && npm run lint:style && npm run lint:spelling && npm run lint:format",
    "ci:all": "npm run lint:all && npm run test:ci",
    "shove": "git config push.autoSetupRemote true && git add . && git commit -m 'wip: shoved' --no-verify && git push --no-verify",
    "prepare": "husky",
    "storybook": "ng run ahlcg:storybook",
    "build-storybook": "ng run ahlcg:build-storybook",
    "chromatic": "npx chromatic",
    "push": "npx prettier --write src && git push",
    "loco-join": "ng g @jsverse/transloco:join",
    "loco-split": "ng g @jsverse/transloco:split"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.3.7",
    "@angular/common": "^20.3.7",
    "@angular/compiler": "^20.3.7",
    "@angular/core": "^20.3.7",
    "@angular/forms": "^20.3.7",
    "@angular/platform-browser": "^20.3.7",
    "@angular/platform-browser-dynamic": "^20.3.7",
    "@angular/router": "^20.3.7",
    "@bugsnag/browser-performance": "^2.14.0",
    "@bugsnag/js": "^8.6.0",
    "@bugsnag/plugin-angular": "^8.6.0",
    "@jsverse/transloco": "^8.1.0",
    "@ngrx/signals": "^19.1.0",
    "@panzoom/panzoom": "^4.6.0",
    "arktype": "^2.1.20",
    "deep-object-diff": "^1.1.9",
    "gsap": "^3.13.0",
    "immer": "^10.1.3",
    "rfc6902": "^5.1.2",
    "rxjs": "~7.8.2",
    "tslib": "^2.3.0",
    "vanilla-jsoneditor": "^3.10.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.3.7",
    "@angular/build": "^20.0.5",
    "@angular/cli": "^20.3.7",
    "@angular/compiler-cli": "^20.3.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/dict-ru_ru": "^2.3.2",
    "@eslint/js": "^9.38.0",
    "@html-eslint/parser": "^0.47.0",
    "@storybook/angular": "^9.1.5",
    "@tailwindcss/language-server": "latest",
    "@tailwindcss/postcss": "^4.1.13",
    "@toolwind/anchors": "^1.0.10",
    "@types/jasmine": "~5.1.9",
    "@typescript-eslint/parser": "^8.46.2",
    "angular-eslint": "20.5.0",
    "chromatic": "^13.1.2",
    "cspell": "^9.0.2",
    "daisyui": "^5.2.3",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-formatter-mo": "^2.3.0",
    "eslint-plugin-better-tailwindcss": "^3.7.10",
    "eslint-plugin-jasmine": "^4.2.2",
    "eslint-plugin-jsonc": "^2.21.0",
    "eslint-plugin-storybook": "^10.0.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.11.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^16.2.6",
    "postcss": "^8.5.4",
    "prettier": "^3.5.3",
    "prettier-plugin-classnames": "^0.8.5",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-sh": "^0.18.0",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "run-script-os": "^1.1.6",
    "storybook": "^9.1.15",
    "stylelint": "^16.25.0",
    "stylelint-config-standard": "^39.0.1",
    "stylelint-config-standard-scss": "^16.0.0",
    "tailwindcss": "^4.1.8",
    "tsc-files": "^1.1.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.46.2"
  },
  "overrides": {
    "@ngrx/signals": {
      "@angular/common": "$@angular/common",
      "@angular/core": "$@angular/core"
    }
  }
}
