{
  "name": "ahlcg",
  "version": "0.0.0",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "npm run test:ci",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadless",
    "format:base": "prettier --log-level warn --ignore-path=./.gitignore  \"src/**/*.{js,ts,css,scss,sh,html,md,json,yaml,yml}\"",
    "format": "npm run format:base -- --write",
    "lint": "eslint -f mo \"src/**/*.{js,ts,html,json}\"",
    "lint:style": "stylelint \"src/**/*.{css,scss}\"",
    "lint:spelling": "cspell --quiet \"src/**/*\"",
    "lint:tsc:app": "tsc --noEmit -p tsconfig.app.json",
    "lint:tsc:spec": "tsc --noEmit -p tsconfig.spec.json",
    "lint:tsc:all": "npm run lint:tsc:app && npm run lint:tsc:spec",
    "lint:format": "npm run format:base -- --check",
    "lint:all": "npm run lint:tsc:all && npm run lint && npm run lint:style && npm run lint:spelling && npm run lint:format",
    "ci:all": "npm run lint:all && npm run test:ci",
    "shove": "git config push.autoSetupRemote true && git add . && git commit -m 'wip: shoved' --no-verify && git push --no-verify",
    "prepare": "husky"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^19.2.2",
    "@angular/common": "^19.2.2",
    "@angular/compiler": "^19.2.2",
    "@angular/core": "^19.2.2",
    "@angular/forms": "^19.2.2",
    "@angular/platform-browser": "^19.2.2",
    "@angular/platform-browser-dynamic": "^19.2.2",
    "@angular/router": "^19.2.2",
    "@bugsnag/browser-performance": "^2.11.0",
    "@bugsnag/js": "^8.2.0",
    "@bugsnag/plugin-angular": "^8.3.0",
    "@panzoom/panzoom": "^4.6.0",
    "rxjs": "~7.8.2",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^19.2.3",
    "@angular/cli": "^19.2.3",
    "@angular/compiler-cli": "^19.2.2",
    "@commitlint/cli": "^19.7.1",
    "@commitlint/config-conventional": "^19.7.1",
    "@html-eslint/parser": "^0.35.2",
    "@tailwindcss/language-server": "latest",
    "@tailwindcss/postcss": "^4.0.1",
    "@types/jasmine": "~5.1.7",
    "@typescript-eslint/parser": "^8.26.0",
    "angular-eslint": "19.1.0",
    "cspell": "^8.17.3",
    "eslint": "^9.20.0",
    "eslint-config-prettier": "^10.0.2",
    "eslint-formatter-mo": "^2.3.0",
    "eslint-plugin-jasmine": "^4.2.2",
    "eslint-plugin-jsonc": "^2.18.2",
    "eslint-plugin-readable-tailwind": "^1.9.0",
    "husky": "^9.1.7",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "lint-staged": "^15.3.0",
    "postcss": "^8.5.2",
    "prettier": "^3.5.3",
    "prettier-plugin-classnames": "^0.7.6",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-sh": "^0.14.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "stylelint": "^16.15.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-config-standard-scss": "^14.0.0",
    "tailwindcss": "^4.0.0",
    "tsc-files": "^1.1.4",
    "typescript": "~5.7.3",
    "typescript-eslint": "8.24.1"
  }
}
